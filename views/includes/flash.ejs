<% if(success && success.length){ %>

    <div class="alert alert-success alert-dismissible fade show col-12 mx-auto  col-md-6 offset-md-3" role="alert">
        <strong>
            <%=success %>
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
<% if(error && error.length){ %>

    <div class="alert alert-danger alert-dismissible fade show col-12 mx-auto col-md-6" role="alert">
        <strong>
            <%= error %>
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>